<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sanket.funmath.Difficulty_Select" >

    <Button
        android:id="@+id/d_hard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/d_easy"
        android:layout_centerVertical="true"
        android:text="@string/hard" />

    <Button
        android:id="@+id/d_easy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/d_hard"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/easy" />

    <Button
        android:id="@+id/d_hardest"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/d_hard"
        android:layout_below="@+id/d_hard"
        android:layout_marginTop="30dp"
        android:text="@string/hardest" />

</RelativeLayout>
