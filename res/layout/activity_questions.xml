<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sanket.funmath.Questions" >

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="146dp"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="40dp" />

    <ImageButton
        android:id="@+id/ibDivide"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/ibMinus"
        android:layout_alignTop="@+id/ibMultiply"
        android:src="@drawable/math_divide_99532" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Score:56"
        android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/TimerBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvScore"
        android:layout_below="@+id/tvScore" />

    <ImageButton
        android:id="@+id/ibMultiply"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/ibPlus"
        android:layout_below="@+id/ibPlus"
        android:layout_marginTop="74dp"
        android:src="@drawable/math_multiply_99537" />

    <ImageButton
        android:id="@+id/ibMinus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/ibMultiply"
        android:layout_alignRight="@+id/tvQuestion"
        android:layout_marginRight="40dp"
        android:src="@drawable/math_minus_99536" />

    <ImageButton
        android:id="@+id/ibPlus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/tvQuestion"
        android:layout_below="@+id/tvQuestion"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/math_plus_99538" />

</RelativeLayout>
